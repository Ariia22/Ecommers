@model IEnumerable<CartItem>

@{
    ViewData["Title"] = "Carrito de Compras";
    var subtotal = ViewData["Subtotal"] as string;
    var iva = ViewData["IVA"] as string;
    var total = ViewData["Total"] as string;
}

<h2>Carrito de Compras</h2>

@if (!Model.Any())
{
    <p>No hay productos en el carrito.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Total</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Price.ToString("C", new System.Globalization.CultureInfo("es-MX"))</td>
                    <td>
                        <div class="d-flex align-items-center">
                            <!-- Formulario para decrementar la cantidad -->
                            <form asp-action="Decrement" asp-route-id="@item.Id" method="post">
                                <button class="btn btn-sm btn-outline-secondary" type="submit" @(item.Quantity <= 1 ? "disabled" : "")>-</button>
                            </form>
                            <span class="mx-2">@item.Quantity</span>
                            <!-- Formulario para incrementar la cantidad -->
                            <form asp-action="Increment" asp-route-id="@item.Id" method="post">
                                <button class="btn btn-sm btn-outline-secondary" type="submit" @(item.Quantity >= 10 ? "disabled" : "")>+</button>
                            </form>
                        </div>
                    </td>
                    <td>@item.TotalPrice.ToString("C", new System.Globalization.CultureInfo("es-MX"))</td>
                    <td>
                        <!-- Formulario para eliminar el producto -->
                        <form asp-action="Remove" asp-route-id="@item.Id" method="post">
                            <button class="btn btn-sm btn-danger" type="submit">X</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <h4>Desglose:</h4>
        <p>Subtotal: <span class="fw-bold">@subtotal</span></p>
        <p>IVA (16%): <span class="fw-bold">@iva</span></p>
        <p>Total: <span class="fw-bold text-success">@total</span></p>

        <form asp-action="ClearCart" method="post" class="mt-3">
            <button class="btn btn-outline-danger" type="submit">Vaciar Carrito</button>
        </form>
    </div>
}
