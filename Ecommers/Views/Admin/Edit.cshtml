@model Ecommers.Models.Product

@{
    ViewData["Title"] = "Editar Producto";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" asp-controller="Admin" method="post" enctype="multipart/form-data">
    <input type="hidden" name="ProductoID" value="@Model.ProductoID" />

    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required />
    </div>

    <div class="form-group">
        <label for="Descripcion">Descripción</label>
        <textarea class="form-control" id="Descripcion" name="Descripcion" required>@Model.Descripcion</textarea>
    </div>

    <div class="form-group">
        <label for="Precio">Precio</label>
        <input type="number" step="0.01" class="form-control" id="Precio" name="Precio" value="@Model.Precio" required />
    </div>

    <div class="form-group">
        <label for="Stock">Stock</label>
        <input type="number" class="form-control" id="Stock" name="Stock" value="@Model.Stock" required />
    </div>

    <div class="form-group">
        <label for="ImagenURL">Imagen URL</label>
        <input type="text" class="form-control" id="ImagenURL" name="ImagenURL" value="@Model.ImagenURL" />
    </div>

    <button type="submit" class="btn btn-primary" id="botonGuardar">Guardar Cambios</button>

</form>
