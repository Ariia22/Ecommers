@model IEnumerable<Ecommers.Models.Product>

<h2>Lista de Productos</h2>

<a asp-action="Create" asp-controller="Admin" class="btn btn-success mb-3">Añadir Producto</a>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Nombre</td>
                <td>@product.Descripcion</td>
                <td>@product.Precio</td>
                <td>@product.Stock</td>
                <td>
                    <a asp-action="Edit" asp-controller="Admin" asp-route-id="@product.ProductoID" class="btn btn-primary">Editar</a>
                    <a asp-action="Delete" asp-controller="Admin" asp-route-id="@product.ProductoID" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
